<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mvaldiviesos3t1.Views.VistaVisualizacion"
             Title="VistaVisualizacion">
    <ContentPage.Resources>
        <Style x:Key="LabelEstilo" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextColor" Value="DarkGreen"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Image Source="contacto.png" HeightRequest="100" />

            <Label x:Name="lblDatos" Style="{StaticResource LabelEstilo}" />

            <Label x:Name="lblAporte" Style="{StaticResource LabelEstilo}" />

            <Button Text="Exportar a archivo" Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>